extends ../layout/common.pug 

block content
    .container
        h1 Name Users
        .d-flex.align-items-center
            form.ml-auto(action="/users/search" method='GET' class='d-flex')
                input(type="text" name="qe" value = q class="form-control")
                button(class="btn btn-primary ml-4 mr-5") Search

        table.table
            tr
                th ID
                th Name
                th Phone
                th Detail
            each user in users        
                tr
                    td= user.id
                    td= user.name      
                    td= user.phone
                    td
                        a(href="/users/" + user.id) View